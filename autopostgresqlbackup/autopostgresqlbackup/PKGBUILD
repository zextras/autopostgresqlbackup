pkgname="carbonio-autopostgresqlbackup"
pkgver="2.3"
pkgrel="6"
pkgdesc="Fully automated tool to make periodic backups of databases"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch=('x86_64')
license=('Apache-2.0')
source=(
  "${pkgname}"
  "${pkgname}.timer"
  "${pkgname}.service"
  "${pkgname}.tmpfiles"
  "${pkgname}.conf"
  "autopostgresqlbackup"
)
sha256sums=("SKIP"
            "SKIP"
            "SKIP"
            "SKIP"
            "SKIP"
)

depends__apt=(
  "systemd"
  "mailutils"
  "bsd-mailx"  
)

depends__yum=(
  "systemd" 
  "mailx"
  "postfix"
)

conflicts=(
  "autopostgresqlbackup"
)

package() {
  cd "${srcdir}"

  install -Dm 644 "${pkgname}.tmpfiles" \
    "${pkgdir}/usr/lib/tmpfiles.d/${pkgname}.conf"
  install -Dm 644 "${pkgname}.timer" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.timer"
  install -Dm 644 "${pkgname}.service" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"

# cd "${srcdir}/autopostgresqlbackup-${pkgver}"

  install -Dm 755 "${pkgname}" \
    "${pkgdir}/usr/sbin/${pkgname}"

  install -Dm 640 "${pkgname}.conf" \
    "${pkgdir}/etc/autodbbackup.d/${pkgname}.conf"

  install -Dm 640 "autopostgresqlbackup" \
    "${pkgdir}/etc/logrotate.d/autopostgresqlbackup"

}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

   systemd-tmpfiles --create >/dev/null || true

  echo "======================================================"
  echo "carbonio-autopostgresqlbackup installed successfully!"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable carbonio-autopostgresqlbackup.service >/dev/null 2>&1 || :
    systemctl stop carbonio-autopostgresqlbackup.service >/dev/null 2>&1 || :
    systemctl --no-reload disable carbonio-autopostgresqlbackup.timer >/dev/null 2>&1 || :
    systemctl stop carbonio-autopostgresqlbackup.timer >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}